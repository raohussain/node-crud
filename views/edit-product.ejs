<%- include('header')%>
<div class="container">
    <div class="row">
     
      <div id="catbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
          <div class="panel-heading">
            <div class="panel-title">Edit Product Category</div>
          </div>
          <div class="panel-body">
            <form action="/all-product/edit/" class="form-horizontal" method="post" role="form">
                <input type="hidden" value="<%= id%>" name="id">
                <% if(success !='') {%>
                    <p style="text-align: center;color:green;"> <%= success%> </p>
                     <% } %>
              <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
              </div>

              <div class="form-group">
                
                <label for="proname" class="col-md-3 control-label">Edit Product Name</label>
                <div class="col-md-9">
                  <input type="text" class="form-control"value="<%= records.product_name%>" name="productname"placeholder="Enter your product Category Name">
                </div>
              </div>
            
              <div class="form-group">
                <!-- Button -->
                <div class="col-md-offset-3 col-md-9">
                  <input type="submit" name="submit" value="Edit Product" class="btn btn-primary">
                </div>
              </div>
              <p> <a href="/all-product">View All Product List</a></p>

            </form>
          </div>
        </div>
<%- include('footer')%>