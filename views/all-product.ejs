<%- include('header')%>
<div class="container">
    <div class="row">
        <h1>All Products List</h1>
        <table class="table table-striped table-primary">
            <thead>
                <tr>
                    <th>Product Category list</th>
                    <th>Product Details</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if(records.length >0 ) {%>
                    <% records.forEach(function(row){%>
                <tr>
                    <td><%= row.product_name%></td>
                    <td>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</td>
                    <td>
                        <a class="btn btn-primary btn-xs" href="/all-product/edit/<%= row._id %>"><i class="fa fa-edit"></i></a>
                        <a class="btn btn-danger btn-xs" href="/all-product/delete/<%= row._id %>"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
                <% }) }%>
            </tbody>
        </table>
    </div>
</div>
<%- include('footer')%>